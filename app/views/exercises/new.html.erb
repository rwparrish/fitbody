<% if @exercise.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @exercise.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_for @exercise do |f| %>
    <%= f.label 'exercise name:' %> <br>
    <%= f.text_field :name %> <br>
    <%= f.label 'Sets:' %> <br>
    <%= f.number_field :sets %> <br>
    <%= f.label 'Reps:' %> <br>
    <%= f.number_field :reps %> <br>
    <%= f.label 'Weight in lbs:' %> <br>
    <%= f.number_field :weight %> <br>
    <%= f.label 'Notes:' %> <br>
    <%= f.text_area :notes %> <br>

 <% if @workout  %>
        <%= f.hidden_field :workout_id, value: @workout.id %>
    <% else  %>
        <%= f.label :"Select a workout" %><br>
        <%= f.collection_select :workout_id, current_user.workouts, :id, :name, {:include_blank => "Please select"} %><br>
            <br>
    <% end  %>
    
    <%= f.submit %>
    <% end %>